@model ZambaFarm.Models.Rabbit

@{
    ViewData["Title"] = "Create Rabbit";
}

<div class="container mt-5">
    <h2 class="text-primary">Create Rabbit</h2>
    <p class="text-muted">Add a new rabbit to the system.</p>

    <!-- Display error messages -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <!-- Form -->
    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="TagNumber" class="form-label"></label>
            <input asp-for="TagNumber" class="form-control" />
            <span asp-validation-for="TagNumber" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Gender" class="form-label"></label>
            <input asp-for="Gender" class="form-control" />
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="BirthDate" class="form-label"></label>
            <input asp-for="BirthDate" class="form-control" type="date" />
            <span asp-validation-for="BirthDate" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="MotherId" class="form-label"></label>
            <select asp-for="MotherId" class="form-select" asp-items="ViewBag.MotherId"></select>
            <span asp-validation-for="MotherId" class="text-danger"></span>
        </div>
        <!-- Additional fields here -->
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>
