@model IEnumerable<ZambaFarm.Models.Turkey>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TagNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsBreeding)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BreedingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mother)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TagNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsBreeding)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BreedingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mother.TurkeyId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TurkeyId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TurkeyId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TurkeyId">Delete</a>
