@model IEnumerable<ZambaFarm.Models.Rabbit>

@{
    ViewData["Title"] = "Rabbit Dashboard";
}

<div class="container mt-5">
    <!-- Page Header -->
    <div class="row justify-content-between align-items-center mb-4">
        <div class="col-md-8">
            <h2 class="text-primary">Rabbit Dashboard</h2>
            <p class="text-muted">Overview of all registered rabbits</p>
        </div>
        <div class="col-md-4 text-md-end">
            <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle me-2"></i>Add New Rabbit</a>
        </div>
    </div>

    <!-- Table for Rabbit Data -->
    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th>#</th>
                    <th>Tag Number</th>
                    <th>Gender</th>
                    <th>Birth Date</th>
                    <th>Mother ID</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted">No rabbits found.</td>
                    </tr>
                }
                else
                {
                    @foreach (var rabbit in Model)
                    {
                        <tr>
                            <td class="text-center">@rabbit.RabbitId</td>
                            <td>@rabbit.TagNumber</td>
                            <td>@rabbit.Gender</td>
                            <td>@rabbit.BirthDate.ToShortDateString()</td>
                            <td>@rabbit.MotherId</td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center">
                                    <a asp-action="Details" asp-route-id="@rabbit.RabbitId" class="btn btn-info btn-sm me-2">
                                        <i class="bi bi-info-circle"></i> Details
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@rabbit.RabbitId" class="btn btn-warning btn-sm me-2">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@rabbit.RabbitId" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
